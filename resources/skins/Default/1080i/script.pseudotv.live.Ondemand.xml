<?xml version="1.0" encoding="utf-8"?>
<window>
    <allowoverlay>no</allowoverlay>   
    <onload>SetProperty(PTVL.OnDemand_Opened,true,10000)</onload>
    <onunload>SetProperty(PTVL.OnDemand_Opened,false,10000)</onunload>
    <onload condition="StringCompare((Window(10000).Property(PTVL.VideoWindow)),true)">ActivateWindow(10006)</onload><!-- Activate random window, workaround for videowindow starting paused -->
    <onunload>ActivateWindow(12005)</onunload>
    <zorder>1</zorder>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
        <control type="group">  
            <posx>0</posx>
            <posy>0</posy>
            <control type="image">
                <width>1920</width>
                <height>1080</height>
                <description>ONDEMAND Background</description>
                <texture>ONDEMANDbackground.png</texture>
                <colordiffuse>FFFFFFFF</colordiffuse>
            </control>         
            <control type="image">
                <description>EPG Selection Overlay</description>
                <texture colordiffuse="$INFO[Window(home).Property(WindowColor)]">ONDEMANDoverlay.png</texture>
                <width>1920</width>
                <height>1080</height>
                <animation effect="fade" start="100" end="0" time="1000">WindowOpen</animation>
            </control>
        </control>
        <control type="grouplist">
            <posx>30</posx>
            <posy>15</posy>
            <itemgap>10</itemgap>
            <orientation>vertical</orientation>
            <animation effect="fade" start="95" end="95" condition="True">Conditional</animation>
            <control type="label"> 
                <description>Static VideoWindow Box Label</description>
                <width>360</width>       
                <height>24</height>
                <font>font12</font>
                <textcolor>C0C0C0C0</textcolor>
                <shadowcolor>ff000000</shadowcolor>
                <align>center</align>
                <scroll>true</scroll>
                <scrollspeed>40</scrollspeed>
                <label>$INFO[Window(10000).Property(OVERLAY.Title)]</label>
                <visible>!StringCompare((Window(10000).Property(PTVL.VideoWindow)),true)</visible>
                <aligny>center</aligny>
            </control>
            <control type="image">
                <description>Static VideoWindow Box Art</description>
                <width>360</width>      
                <height>180</height>
                <align>center</align>
                <aligny>center</aligny>
                <aspectratio>keep</aspectratio>
                <texture background="true">$INFO[Window(10000).Property(OVERLAY.landscape)]</texture>
                <visible>!StringCompare((Window(10000).Property(PTVL.VideoWindow)),true)</visible>
            </control>
        </control>   
        <control type="grouplist">
            <posx>30</posx>
            <posy>15</posy>
            <itemgap>10</itemgap>
            <orientation>vertical</orientation>
            <animation effect="fade" start="95" end="95" condition="True">Conditional</animation>
            <control type="label"> 
                <description>VideoWindow Box Label</description>
                <width>360</width>       
                <height>24</height>
                <font>font12</font>
                <textcolor>C0C0C0C0</textcolor>
                <shadowcolor>ff000000</shadowcolor>
                <align>center</align>
                <scroll>true</scroll>
                <scrollspeed>40</scrollspeed>
                <label>$INFO[Window(10000).Property(OVERLAY.Title)]</label>
                <visible>StringCompare((Window(10000).Property(PTVL.VideoWindow)),true)</visible>
                <aligny>center</aligny>
            </control>
            <control type="videowindow">
                <description>VideoWindow Box Art</description>
                <width>360</width>      
                <height>180</height>
                <align>center</align>
                <aligny>center</aligny>
                <aspectratio>keep</aspectratio>
                <visible>StringCompare((Window(10000).Property(PTVL.VideoWindow)),true)</visible>
            </control>
        </control>
        <control type="grouplist">              
            <posx>409</posx>
            <posy>260</posy>
            <itemgap>1</itemgap>
            <orientation>horizontal</orientation>
