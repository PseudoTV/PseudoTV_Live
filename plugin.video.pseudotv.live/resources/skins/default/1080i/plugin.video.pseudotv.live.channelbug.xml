<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
    <backgroundcolor>0x00000000</backgroundcolor>
    <onload>SetProperty(plugin.video.pseudotv.live.OVERLAY_CHANNELBUG,true,10000)</onload>
    <onunload>SetProperty(plugin.video.pseudotv.live.OVERLAY_CHANNELBUG,false,10000)</onunload> 
    <controls>
        <control type="group" id="40000">
            <posx>0</posx>
            <posy>0</posy>
            <control type="image"> 
                <description>Hide Background</description>
                <width>auto</width>
                <height>auto</height>
                <colordiffuse>black</colordiffuse>
                <aspectratio scalediffuse="true" align="center" aligny="center">scale</aspectratio>
                <texture>colors/white.png</texture>
            </control>
            <control type="videowindow">
                <width>auto</width>
                <height>auto</height>
                <aspectratio scalediffuse="true" align="center" aligny="center">scale</aspectratio>
                <visible>Player.Playing</visible>
            </control>
            <control type="image" id="40001">
                <description>Background Ratio</description>
                <width>auto</width>
                <height>auto</height>
                <aspectratio scalediffuse="true" align="center" aligny="center">scale</aspectratio>
                <texture>backgrounds/ratio.png</texture>
            </control>
        </control>
        <control type="grouplist" id="40002">
            <left>200</left>
            <bottom>35</bottom>
            <width>1000</width>
            <height>50</height>
            <itemgap>10</itemgap>
            <orientation>horizontal</orientation>
            <visible>true</visible>
            <animation effect="fade" start="100" end="0" time="12000">WindowOpen</animation>
            <control type="image">
                <width>50</width> 
                <height>50</height> 
                <align>left</align>
                <aligny>center</aligny>
                <texture>buttons/dpad.png</texture>
                <aspectratio scalediffuse="false">keep</aspectratio>
            </control>
            <control type="label">
                <align>left</align>
                <aligny>center</aligny>
                <width>auto</width>
                <height>50</height>
                <font>font32_title</font>
                <textcolor>ffffffff</textcolor>
                <shadowcolor>ff000000</shadowcolor>
                <label>Move logo into position.</label>
            </control>
        </control>
    </controls>
</window>