            <animation effect="fade" time="20">WindowClose</animation>
            <control type="button" id="40001">
                <description>Replay Button</description>
                <left>480</left>
                <bottom>270</bottom>
                <width>200</width>
                <height>40</height>
                <colordiffuse>FFFFFFFF</colordiffuse>
                <shadowcolor>FF696969</shadowcolor>
                <texturefocus colordiffuse="FF01416b">buttons/ButtonFocus.png</texturefocus>
                <texturenofocus colordiffuse="FF696969">/buttons/ButtonFocus.png</texturenofocus>
