<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
    <!-- <onload>RunScript(script.artistslideshow)</onload> -->
    <onload>SetProperty(plugin.video.pseudotv.live.OVERLAY,true,10000)</onload>
    <onunload>SetProperty(plugin.video.pseudotv.live.OVERLAY,false,10000)</onunload> 
    <controls>
      <control type="group" id="40001">
        <description>Background Overlay</description>
        <visible>Player.HasVideo</visible>
        <posx>0</posx>
        <posy>0</posy>
        <control type="image">
          <description>Background</description>
          <width>1920</width>
          <height>1080</height>
          <aspectratio>keep</aspectratio>
          <texture>background.gif</texture>
        </control>
        <control type="image">
          <description>Background</description>
          <width>1920</width>
          <height>1080</height>
          <aspectratio>keep</aspectratio>
          <animation effect="fade" end="45" condition="True">conditional</animation>
          <texture>background.png</texture>
        </control>
        <control type="grouplist">
          <description>Channel Meta</description>>
          <posx>768</posx>
          <posy>351</posy>
          <width>1080</width>
          <height>800</height>
          <itemgap>10</itemgap>
          <orientation>vertical</orientation>
          <control type="label"> 
            <width>384</width>
            <height>40</height>
            <font>font37</font>
            <align>center</align>
            <aligny>bottom</aligny>
            <scroll>true</scroll>
            <textcolor>white</textcolor>
            <shadowcolor>text_shadow</shadowcolor>
            <label>$INFO[Window(10000).Property(plugin.video.pseudotv.live.overlay.name),You're Watching ,]</label>
          </control>
          <control type="image">
            <description>Logo</description>
            <width>384</width>
            <height>384</height>
            <aspectratio aligny="center">keep</aspectratio>
            <texture>$INFO[Window(10000).Property(plugin.video.pseudotv.live.overlay.logo)]</texture>
          </control>
          <control type="label">
            <width>384</width>
            <height>40</height>
            <font>font37</font>
            <align>center</align>
            <aligny>bottom</aligny>
            <scroll>false</scroll>
            <textcolor>white</textcolor>
            <shadowcolor>text_shadow</shadowcolor>
            <label>We'll Be Right Back...</label>
          </control>
        </control> 
      </control> 
      
      <control type="grouplist" id="40003">
        <visible>Control.IsVisible(40001)</visible>
        <description>On Next</description>>
        <posx>500r</posx>
        <posy>128</posy>
        <width>480</width>
        <height>800</height>
        <itemgap>20</itemgap>
        <orientation>vertical</orientation>
        <control type="label">
          <width>480</width>
          <height>40</height>
          <font>font30_title</font>
          <align>center</align>
          <aligny>bottom</aligny>
          <scroll>false</scroll>
          <textcolor>white</textcolor>
          <shadowcolor>text_shadow</shadowcolor>
          <label>$INFO[Container(40000).ListItem(1).Label,,]</label>
        </control>
        <control type="image">
          <description>Fanart</description>
          <width>480</width>
          <height>270</height>
          <aspectratio aligny="center">keep</aspectratio>
          <texture>$INFO[Container(40000).ListItem(1).Thumb]</texture>
          <bordersize>5</bordersize>
          <bordertexture border="5">white.png</bordertexture>
        </control>
        <control type="label"> 
          <width>480</width>
          <height>80</height>
          <font>font36_title</font>
          <align>center</align>
          <aligny>bottom</aligny>
          <scroll>false</scroll>
          <textcolor>white</textcolor>
          <shadowcolor>text_shadow</shadowcolor>
          <label>Coming Up Next</label>
        </control>
      </control>

      <control type="group" id="40002">
        <description>Player Overlay</description>
        <visible>Player.HasVideo + Player.Playing</visible>
        <posx>0</posx>
        <posy>0</posy>
        <control type="image"> 
          <description>Hide Kodi UI</description>
          <width>1920</width>
          <height>1080</height>
          <texture>white.png</texture>
          <colordiffuse>black</colordiffuse>
        </control>
        <control type="videowindow" id="41000">
          <description>Video Overlay</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>1920</width>
          <height>1080</height>
        </control>
      </control>
      
      <control type="image" id="41004">
        <description>Channel Bug</description>
        <left>1495</left>
        <top>852</top>
        <width>192</width>
        <height>192</height>
        <aspectratio>keep</aspectratio>
        <texture fallback="logo.png"></texture>
        <animation effect="fade" end="25" condition="True">conditional</animation>
        <animation effect="fade" start="0" end="25" time="4000" reversible="true">>VisibleChange</animation>
      </control>
      
      <control type="list" id="40000">
        <description>Meta Container</description>
        <itemlayout width="0" height="0">
        </itemlayout>
        <focusedlayout height="0" width="0">
        </focusedlayout>
      </control>
    </controls>
</window>

