<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
    <onload>SetProperty(plugin.video.pseudotv.live.OVERLAY,true,10000)</onload>
    <onunload>SetProperty(plugin.video.pseudotv.live.OVERLAY,false,10000)</onunload> 
    <controls>
      <control type="image"> 
        <description>Hide Kodi UI</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>auto</width>
        <height>auto</height>
        <align>center</align>
        <aligny>center</aligny>
        <texture>white.png</texture>
        <colordiffuse>black</colordiffuse>
      </control>
    
      <control type="group">
        <posx>0</posx>
        <posy>0</posy>
        <description>Background !Playing</description>
        <visible>Player.HasVideo + [!Player.Playing | Player.Paused]</visible>
        <control type="image"> 
          <description>Background Thumb</description>
          <width>auto</width>
          <height>auto</height>
          <aspectratio>keep</aspectratio>
          <align>center</align>
          <aligny>center</aligny>
          <texture>$INFO[Container(40000).ListItem(0).Thumb]</texture>
          <!-- <texture background="true">$INFO[Player.Art(thumb)]</texture> -->
        </control>
        <control type="image"> 
          <description>Background Logo</description>
          <posx>704</posx>
          <posy>284</posy>
          <width>512</width>
          <height>512</height>
          <aspectratio>keep</aspectratio>
          <align>center</align>
          <aligny>center</aligny>
          <texture>$INFO[Container(40000).ListItem(0).Icon]</texture>
        </control>
      </control>
      
      <control type="group" id="40002">
        <posx>0</posx>
        <posy>0</posy>
        <description>Background Playing</description>
        <visible>Player.HasVideo + [Player.Playing | Player.Paused]</visible>
        <control type="videowindow" id="41000">
          <description>Video Overlay</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>auto</width>
          <height>auto</height>
          <align>center</align>
          <aligny>center</aligny>
        </control>
        <control type="group" id="41002">
          <description>Skip/Startover</description>
          <left>1536</left>
          <top>888</top>
          <width>256</width>
          <height>64</height>
          <visible>false</visible>
          <control type="image"> 
            <visible>false</visible>
            <width>256</width>
            <height>64</height>
            <texture>white.png</texture>
            <colordiffuse>dimgray</colordiffuse>
          </control>
        </control>
        <control type="group" id="41003">
          <description>On Next</description>
          <left>1280</left>
          <top>192</top>
          <align>right</align>
          <aligny>center</aligny>
          <visible>false</visible>
          <animation effect="fade" end="75" condition="True">Conditional</animation>
          <!-- <animation effect="slide" start="1920,192" end="1280,192" time="200" tween="quadratic" reversible="True" condition="True">VisibleChange</animation> -->
          <control type="image"> 
            <width>768</width>
            <height>128</height>
            <texture>white.png</texture>
            <colordiffuse>dimgray</colordiffuse>
          </control>
          <control type="image"> 
            <left>12</left>
            <top>12</top>
            <width>128</width>
            <height>96</height>
            <texture>$INFO[Container(40000).ListItem(1).Thumb]</texture>
          </control>
          <control type="grouplist">
            <left>152</left>
            <itemgap>2</itemgap>
            <orientation>vertical</orientation>
            <control type="label">
              <width>auto</width>
              <height>30</height>
              <font>font12</font>
              <scroll>false</scroll>
              <textcolor>white</textcolor>
              <shadowcolor>text_shadow</shadowcolor>
              <label>$INFO[Player.TimeRemaining(ss),Coming Up Next in , seconds]</label>
            </control>
            <control type="label">
              <width>auto</width>
              <height>30</height>
              <font>font12</font>
              <scroll>true</scroll>
              <textcolor>white</textcolor>
              <shadowcolor>text_shadow</shadowcolor>
              <label>$INFO[Container(40000).ListItem(1).Label,,]</label>
            </control>
            <control type="label">
              <width>auto</width>
              <height>30</height>
              <font>font12</font>
              <scroll>true</scroll>
              <textcolor>white</textcolor>
              <shadowcolor>text_shadow</shadowcolor>
              <label>$INFO[Container(40000).ListItem(1).Property(episodelabel),,]</label>
            </control>
          </control>
        </control>
        
        <control type="image" id="41004">
          <description>Channel Bug</description>
          <left>1536</left>
          <top>888</top>
          <width>128</width>
          <height>128</height>
          <aspectratio>keep</aspectratio>
          <animation effect="fade" end="25" condition="True">Conditional</animation>
          <!-- <animation effect="fade" start="100" end="25" time="100" condition="Control.IsVisible(41004)">Visible</animation> -->
          <!-- <animation effect="fade" start="25" end="0" time="100" condition="!Control.IsVisible(41004)">Hidden</animation> -->
          <!-- <animation effect="zoom" end="150,100" center="auto" time="200" delay="200" condition="True" reversible="True">Conditional</animation> -->
          <!-- <animation effect="zoom" start="888,1536,0,0" end="888,1536,128,128" time="4000" tween="elastic" reversible="true" >VisibleChange</animation> -->
          <!-- <animation effect="fade" start="0" end="25" time="4000" reversible="true">VisibleChange</animation> -->
        </control>
        
      </control>
      
      <control type="image" id="41005">
        <description>Screen Overlay</description>
        <left>0</left>
        <top>0</top>
        <width>auto</width>
        <height>auto</height>
        <aspectratio>scale</aspectratio>
        <texture></texture>
      </control>
      
      <control type="list" id="40000">
        <description>Meta Container</description>
        <itemlayout width="0" height="0">
        </itemlayout>
        <focusedlayout height="0" width="0">
        </focusedlayout>
      </control>
    </controls>
</window>